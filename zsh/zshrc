setopt autocd


ZSH_THEME="lambda"

plugins=(
  osx
	# https://github.com/zsh-users/zsh-autosuggestions/blob/master/INSTALL.md
  zsh-autosuggestions
	# https://github.com/zsh-users/zsh-syntax-highlightings/blob/master/INSTALL.md
  zsh-syntax-highlighting
)

export EDITOR=nvim

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh
export PRIV=$HOME/.zshrcpriv
export MYVIMRC=$HOME/.vimrc

export DOTFILES=$HOME/.dotfiles
export ZFILES=$HOME/.dotfiles/zsh

source $ZSH/oh-my-zsh.sh
source $ZFILES/alias.zsh
source $ZFILES/language.zsh
source $ZFILES/func.zsh
source $ZFILES/env.zsh

source $PRIV

# FZF bindings
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
# Ignore node modules
export FZF_DEFAULT_COMMAND='rg --files --follow --no-ignore-vcs --hidden -g "!{node_modules/*,.git/*,env/*,venv/*,__pycache__/*}"'
